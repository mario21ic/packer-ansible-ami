{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": ""
  },
  "provisioners": [
    {
      "type": "ansible",
      "playbook_file": "./playbook.yml"
    }
  ],
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "ca-central-1",
      "source_ami": "ami-ebed508f",
      "instance_type": "t2.micro",
      "ssh_username": "ec2-user",
      "ami_name": "my_backend"
    }
  ]
}
